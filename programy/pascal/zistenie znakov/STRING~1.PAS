{Program urcuje pocet znakov, slov a viet}
{VST: Veta/slovo}
{VYS: Pocet znakov, slov a viet}

PROGRAM ZNAKY_SLOVA_VETY;
USES CRT;
VAR TEST:CHAR;
    TEXT:STRING;
    POCET_Z, POCET_S, POCET_V, i, j, POM, POCITADLO:INTEGER;
    ABECEDA: SET OF CHAR;


{ PROCEDURA PRE SPRAVNY ZACIATOK }
PROCEDURE ZACIATOK;
 BEGIN
  CLRSCR;
  TEXTCOLOR(GREEN);
  WRITE('                      POCET ZNAKOV, SLOV, VIET ');
  TEXTCOLOR(CYAN);
  GOTOXY(1,4);
  WRITELN(' PROGRAM URCUJE POCET ZNAKOV, SLOV A VIET V RETAZCI. DBAJTE NA ');
  WRITELN(' VELKE PISMENA NA ZACIATKU VIET. PROGRAM VAM PRI NESPRAVNOM ZA-');
  WRITELN(' DANI VETY VYPISE, ZE STE UROBILI CHYBU. AJ MEDZERA NA ZACIATKU');
  WRITELN(' RETAZCA JE CHYBOU. ');
  WRITELN(' ______________________________________________________________');
  TEXTCOLOR(WHITE);
  GOTOXY(1,11);
 END;

{ PROCEDURA PRE SPRAVNE UKONCENIE }
PROCEDURE KONIEC;
 BEGIN
   WRITELN;
   WRITELN(' CHCETE POKRACOVAT? AK ANO ZADAJTE "A" AK NIE ZADAJTE "N" ');
   TEST:=READKEY;
   WHILE (TEST<>'A') AND (TEST<>'a') AND (TEST<>'N') AND (TEST<>'n') DO
    BEGIN
     WRITELN;
     WRITE(' POZOR! ZADAL SI NESPRAVNY ZNAK, ZADAJ ZNOVA: ');
     TEST:=READKEY;
    END;
   READLN;
 END;

{ TELO HLAVNEHO PROGRAMU }

BEGIN
 REPEAT
 POCET_Z:=0;
 POCET_S:=0;
 POCET_V:=0;
 i:=0;
 ZACIATOK;
 WRITE(' ZADAJTE LUBOVOLNE DLHY TEXT(SLOVO/VETA/ZNAK): ');
 WRITELN;
 WRITE(' ');
 READ(TEXT);
 FOR i:=1 TO LENGTH(TEXT) DO
  BEGIN
   POCET_Z:=POCET_Z+1;
  END;
 FOR i:=1 TO LENGTH(TEXT) DO
  BEGIN
   IF (TEXT[i]=' ') THEN POCET_S:=POCET_S+1;
  END;
 FOR i:=1 TO LENGTH(TEXT) DO
  BEGIN
   IF (TEXT[i]='.') OR (TEXT[i]='?') OR (TEXT[i]='!') THEN POCET_V:=POCET_V+1;
  END;
 POCET_S:=POCET_S+1;
 WRITELN;
 WRITELN(' POCET ZNAKOV= ',POCET_Z);
 WRITELN(' POCET SLOV=   ',POCET_S);
 WRITELN(' POCET VIET=   ',POCET_V);
 ABECEDA:=['a'..'z'];
 ABECEDA:=ABECEDA+['A'..'Z'];
 POCITADLO:=16;
 FOR i:=1 TO LENGTH(TEXT) DO
  BEGIN
   IF TEXT[i] IN ABECEDA THEN
    BEGIN
     POM:=0;
     FOR j:=1 TO LENGTH(TEXT) DO IF TEXT[i]=TEXT[j] THEN POM:=POM+1;
     WRITELN(' PISMENO ',TEXT[i],' JE V ZADANEJ VETE ',POM,' KRAT.');
     ABECEDA:=ABECEDA-[TEXT[i]];
    END;
  END;
 KONIEC;
 UNTIL (TEST='N') OR (TEST='n');
END.
